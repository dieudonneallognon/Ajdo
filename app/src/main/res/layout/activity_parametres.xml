<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <PreferenceCategory android:title="Profil utilisateur" >
        <EditTextPreference
            android:title="Nom"
            android:summary="Votre nom"
            android:key="prefUsername"/>

        <EditTextPreference
            android:title="Prénom"
            android:summary="Votre prénom"
            android:key="prefUsersurname"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Paramètres Commerce" >
        <EditTextPreference
            android:title="Commerce"
            android:summary="Nom"
            android:key="prefCom_name"/>

        <ListPreference
            android:key="monnaie"
            android:entries="@array/devise"
            android:summary="Monnaie utilisée"
            android:entryValues="@array/themeValues"
            android:title="Monnaie"
            android:defaultValue="FCFA"/>
    </PreferenceCategory>

</PreferenceScreen>